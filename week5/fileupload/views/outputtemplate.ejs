<html>
    <head>
        <title>The Data</title>
    </head>
    <body>
        <h1>Here is the output!</h1>
        
        <% 
            if (data.length > 0) {
                for (var i = 0; i < data.length; i++) { 
                    if (data[i].file.mimetype == "image/jpg" || data[i].file.mimetype == "image/png") {
        %>
                        <img src="uploads/<%-data[i].file.filename %>">
        <% 
                    } else if (data[i].file.mimetype == "video/mp4") {
        %>
                        <video controls src="uploads/<%-data[i].file.filename %>"></video>
        <%
                    }
        %>                    
                    <div id="dataout<%= i %>" style="color: <%= data[i].color %>">
                        <a href="/displayrecord?_id=<%= data[i]._id %>"><%= data[i].text %>
                    </a></div>
        <% 
                } 
            }
        %>

        <form method="POST" action="/formdata">
            <label for="data">Enter Text to Post:</label>
            <input type="text" name="data" value="Enter Text">
            <input type="color" name="color">
            <input type="submit" name="submit" value="Submit">
        </form>
    </body>
</html>