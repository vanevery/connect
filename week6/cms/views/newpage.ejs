<html>
    <head>
        <title>New Page</title>
    </head>
    <body>
        <form method="POST" action="/newpage">
            <% if (data._id != -1) { %>
                <input type="hidden" name="_id" value="<%= data._id %>">
            <% } %>
            <label for="title">Title:</label>
            <input type="text" name="title" value="<%= data.title %>"><br />
            <label for="maincontent">Main Content:</label>
            <textarea name="maincontent" cols="80" rows="10"><%- data.maincontent %></textarea><br />
            <input type="submit" name="submit" value="Submit">
        </form>
    </body>

</html>